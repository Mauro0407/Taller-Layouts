<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taller_Layouts.FlexLayout"
             Title="FlexLayout">
    <FlexLayout Direction="Column" JustifyContent="Start" AlignItems="Start" Padding="10">

        <!-- Primer elemento con imagen y texto -->
        <FlexLayout Direction="Row" AlignItems="Center" Spacing="10">
            <Image x:Name="imagen1" Source="Resources/Images/imagen1.svg" WidthRequest="50" HeightRequest="50">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageTapped" CommandParameter="imagen1" />
                </Image.GestureRecognizers>
            </Image>
            <Label Text="Imagen 1" VerticalOptions="Center" />
        </FlexLayout>

        <!-- Segundo elemento con imagen y texto -->
        <FlexLayout Direction="Row" AlignItems="Center" Spacing="10">
            <Image x:Name="imagen2" Source="Resources/Images/imagen2.svg" WidthRequest="50" HeightRequest="50">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageTapped" CommandParameter="imagen2" />
                </Image.GestureRecognizers>
            </Image>
            <Label Text="Imagen 2" VerticalOptions="Center" />
        </FlexLayout>

    </FlexLayout>
</ContentPage>
