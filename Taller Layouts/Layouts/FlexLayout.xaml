<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taller_Layouts.FlexLayout"
             Title="FlexLayout">
    <FlexLayout Direction="Row" JustifyContent="SpaceBetween" AlignItems="Center" Padding="10">

        <StackLayout HorizontalOptions="CenterAndExpand">
            <Image x:Name="imagen1" Source="/Imagenes/imagen1.png" WidthRequest="100" HeightRequest="100" />
            <Label Text="Imagen 1" HorizontalOptions="Center" />
        </StackLayout>

        <StackLayout HorizontalOptions="CenterAndExpand">
            <Image x:Name="imagen2" Source="/Imagenes/imagen2.png" WidthRequest="100" HeightRequest="100" />
            <Label Text="Imagen 2" HorizontalOptions="Center" />
        </StackLayout>

    </FlexLayout>
</ContentPage>
