<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taller_Layouts.FlexLayout"
             Title="FlexLayout">
    <FlexLayout Direction="Column" JustifyContent="Start" AlignItems="Center" Padding="10">
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="5">
            <Image x:Name="imagen1" Source="imagen1.png" WidthRequest="250" HeightRequest="250">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageTapped1"/>
                </Image.GestureRecognizers>
            </Image>
            <Label Text="Mauricio Mora" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Padding="10"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="5">
            <Image x:Name="imagen2" Source="imagen2.png" WidthRequest="250" HeightRequest="250">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageTapped2"/>
                </Image.GestureRecognizers>
            </Image>
            <Label Text="Mauricio Mora" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Padding="10"/>
        </StackLayout>

    </FlexLayout>
</ContentPage>
